    <%#= javascript_import_module_tag "panda_cms/embed/editable" if controller_name == "pages" && action_name == "edit" %>
    <%= render "panda_cms/shared/favicons" %>
    <%= yield :head %>
  </head>
  <body class="overflow-hidden h-full">
    <%= render "panda_cms/admin/shared/flash" %>
